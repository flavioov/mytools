        #NordVPN
alias nordvpn.up="sudo ipsec up NordVPN"
alias nordvpn.down="sudo ipsec down NordVPN"
alias nordvpn.status="sudo ipsec status"
alias nordvpn.status.all="sudo ipsec statusall"
alias nordvpn.conf="sudo vim /etc/ipsec.conf"
alias nordvpn.reset="sudo ipsec restart"
alias nordvpn.ping.servers="sh ~/my_tools/tools/ping_nordvpn.sh"

