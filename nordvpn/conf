conn NordVPN
	keyexchange=ikev2
	dpdaction=clear
	dpddelay=300s
  	eap_identity="oliveira.v@outlook.com"
	leftauth=eap-mschapv2
	left=%defaultroute
	leftsourceip=%config
	right=br33.nordvpn.com
	rightauth=pubkey
	rightsubnet=0.0.0.0/0
	rightid=%br33.nordvpn.com
	rightca=/etc/ipsec.d/cacerts/NordVPN.pem
	type=tunnel
	auto=add 

conn ignorelan
    left=127.0.0.1 #prevents usage in peers selection algorithm
    leftsubnet=192.168.1.0/24
    rightsubnet=192.168.1.0/24
    authby=never
    type=passthrough
    auto=route
